    "# coding: utf-8\n",
    "from picamera import PiCamera\n",
    "from time import sleep\n",
    "\n",
    "camera = PiCamera()\n",
    "camera.start_preview()\n",
    "camera.start_recording('video.h264')\n",
    "sleep(10)\n",
    "camera.stop_recording()\n",
    "camera.stop_preview()\n"
